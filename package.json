{
  "name": "egghead-io-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:style": "tailwind build styles/index.css -o styles/output.css",
    "start": "next start",
    "load-instructors": "node ./scripts/loadStaticDataToFiles.js -i",
    "load-lessons": "node ./scripts/loadStaticDataToFiles.js -l",
    "load-series": "node ./scripts/loadStaticDataToFiles.js -s",
    "load-all": "node ./scripts/loadStaticDataToFiles.js -ils",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "e2e": "start-test dev 3000 cy:open",
    "cy:open": "cypress open",
    "pree2e": "rm -rf .nyc_output coverage .next || true",
    "check-coverage-limits": "nyc report --reporter=text-summary --check-coverage --statements 100",
    "codemod:tachyons-to-tailwind": "codemod --plugin tachyons-to-tailwind-transform.js",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,ts,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.{js,ts,tsx}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,tsx,md,mdx}\""
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.14",
    "@reach/disclosure": "^0.10.5",
    "@reach/menu-button": "^0.10.5",
    "@reach/visually-hidden": "^0.10.4",
    "@tailwindcss/ui": "^0.5.0",
    "algoliasearch": "^4.3.0",
    "client-oauth2": "^4.3.2",
    "formik": "^2.1.5",
    "graphql-request": "^2.0.0",
    "js-cookie": "^2.2.1",
    "load-script": "^1.0.0",
    "lodash": "^4.17.19",
    "mdx-prism": "^0.3.1",
    "next": "canary",
    "next-compose-plugins": "^2.2.0",
    "next-mdx-enhanced": "^3.1.0",
    "next-seo": "^4.7.3",
    "next-svgr": "^0.0.2",
    "qs": "^6.9.4",
    "query-string": "^6.13.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-instantsearch-dom": "^6.6.0",
    "react-markdown": "^4.3.1",
    "reading-time": "^1.2.0",
    "remark-code-titles": "^0.1.1",
    "remark-footnotes": "^1.0.0",
    "remark-slug": "^6.0.0",
    "swr": "^0.2.3",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@47ng/check-env": "^2.0.1",
    "@babel/generator": "^7.11.0",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@codemod/cli": "^2.2.1",
    "@cypress/code-coverage": "^3.8.1",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@mdx-js/loader": "^1.6.11",
    "@next/bundle-analyzer": "^9.5.2",
    "@next/mdx": "^9.4.4",
    "@tailwindcss/typography": "^0.2.0",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "@types/lodash": "^4.14.158",
    "@types/mdx-js__react": "^1.5.2",
    "@types/node": "^14.0.26",
    "@types/qs": "^6.9.4",
    "@types/react": "^16.9.43",
    "@types/react-instantsearch-dom": "^6.3.0",
    "@types/yup": "^0.29.3",
    "axios": "^0.19.2",
    "babel-jest": "^26.1.0",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "command-line-args": "^5.1.1",
    "cypress": "^4.11.0",
    "emotion": "^10.0.27",
    "emotion-server": "^10.0.27",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "istanbul-lib-coverage": "^3.0.0",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nyc": "^15.1.0",
    "pad-number": "^0.0.4",
    "parse-link-header": "^1.0.1",
    "postcss-nested": "^4.2.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "rehype": "^11.0.0",
    "start-server-and-test": "^1.11.2",
    "tailwindcss": "^1.4.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.{js, ts, tsx}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false
  },
  "nyc": {
    "exclude": [
      "pages/api/__coverage__.js"
    ]
  }
}
